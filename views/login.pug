extends layout

block content
  h1=title

  p LOG IN FORM 
  form(method='POST' action='/log-in')
   
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='username..' name='username' required='true')

    div.form-group
      label(for='password') Password:
      input#password.form-control(type='text' placeholder='password...' name='password' required='true')

   
    button.btn.btn-primary(type='submit') Log in

  if errors
    ul
      for error in errors
        li!= error.msg